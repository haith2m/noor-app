{
  "name": "noor",
  "description": "Islamic desktop app with prayer times, Azkar, Quran audio, and Hijri calendar.",
  "author": {
    "name": "Haitham Almaymouni",
    "email": "haitham.almaymouni@outlook.com"
  },
  "version": "0.3.0",
  "main": "public/electron.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/haith2m/noor-app.git"
  },
  "build": {
    "appId": "com.noor.app",
    "productName": "Noor",
    "publish": {
      "provider": "github",
      "owner": "haith2m",
      "repo": "noor-app",
      "releaseType": "release",
      "vPrefixedTagName": true
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/app.ico"
    },
    "linux": {
      "target": [
        "rpm",
        "deb",
        "AppImage",
        "snap"
      ],
      "icon": "public/app.png",
      "category": "Utility"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict"
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "21.08",
      "sdk": "org.freedesktop.Sdk"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Noor"
    }
  },
  "dependencies": {
    "@tabler/icons-react": "^3.19.0",
    "adhan": "^4.4.3",
    "auto-launch": "^5.0.6",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "fs": "^0.0.1-security",
    "i18next": "^23.11.5",
    "i18next-http-backend": "^2.5.2",
    "moment": "^2.30.1",
    "moment-hijri": "^2.1.2",
    "node-cron": "^3.0.3",
    "path": "^0.12.7",
    "play-sound": "^1.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^14.1.2",
    "react-icons": "^5.3.0",
    "react-quran": "^1.3.2",
    "react-router": "^6.23.1",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.0",
    "tailwindcss": "^3.4.3",
    "wait-on": "^6.0.1",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "babel-preset-react-app": "^10.1.0",
    "electron": "^31.0.1",
    "electron-builder": "^22.14.13"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder --config",
    "release": "npm run build && electron-builder -mwl --publish always",
    "publish": "electron-builder --publish always",
    "build": "npm run react-build && npm run electron-build",
    "build:linux": "npm run react-build && electron-builder --linux",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "release-version": "node release-version.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
